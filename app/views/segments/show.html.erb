<div class="w-full">
  <div class="border-b border-gray-200 pb-5 sm:flex sm:items-center sm:justify-between">
    <h3 class="text-base font-semibold leading-6 text-gray-900"><%= link_to "Segments", :segments %> &raquo; <%= @segment.to_s %></h3>
    <div class="flex gap-2">
      <%= link_to "Delete", @segment,
      class: "btn btn-sm btn-ghost",
      data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      <%= link_to "Edit", edit_segment_path(@segment), class: "btn btn-sm" %>
      <%= link_to "Back", segments_path, class: "btn btn-ghost btn-sm" %>
    </div>
  </div>
</div>
<div class="container max-w-3xl mx-auto p-4">
  <div class="card bg-base-100">
    <div class="card-body">
      <div class="grid grid-cols-1 gap-4">
        <div>
          <label class="text-sm opacity-70">Identifier</label>
          <div class="mt-1"><%= @segment.identifier %></div>
        </div>
        <div>
          <label class="text-sm opacity-70">Allow new values</label>
          <div class="mt-1"><%= @segment.allow_new_values %></div>
        </div>
        <div>
          <label class="text-sm opacity-70">Values</label>
          <div class="mt-1 ml-8">
            <ul class="list-disc">
              <% @segment.segment_values.each do |segment_value| %>
                <li><%= segment_value.val %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
