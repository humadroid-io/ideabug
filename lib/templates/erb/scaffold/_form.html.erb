<div class="max-w-6xl mx-auto px-4">
  <%%= form_with(model: <%= singular_table_name %>) do |form| %>
  <%% if <%= singular_table_name %>.errors.any? %>
  <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-6">
    <h4 class="text-base font-medium text-red-800 mb-2"><%%= pluralize(<%= singular_table_name %>.errors.count, "error") %> prevented saving:</h4>
    <ul class="list-disc ml-5 text-sm text-red-700">
      <%% <%= singular_table_name %>.errors.each do |error| %>
      <li><%%= error.full_message %></li>
      <%% end %>
    </ul>
  </div>
  <%% end %>
  <div class="bg-white border rounded-md">
    <div class="p-6">
      <% attributes.each do |attribute| %>
        <div class="mb-4">
          <%%= form.label :<%= attribute.column_name %>, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%%= form.<%= attribute.field_type %> :<%= attribute.column_name %>,
          class: "block w-full rounded-md border-gray-300 text-gray-900 focus:border-primary-500 focus:ring-primary-500" %>
        </div>
      <% end %>
      <div class="mt-6 flex items-center justify-end gap-x-3">
        <%%= link_to "Cancel", <%= index_helper %>_path,
        class: "text-gray-600 hover:text-gray-800" %>
        <%%= form.submit class: "px-4 py-2 text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 rounded-md" %>
      </div>
    </div>
  </div>
  <%% end %>
</div>
