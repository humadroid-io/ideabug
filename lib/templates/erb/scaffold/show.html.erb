<div class="max-w-6xl mx-auto px-4">
  <div class="mb-6 flex items-center justify-between">
    <div>
      <h2 class="text-2xl font-medium text-gray-900"><%= singular_table_name.titleize %> Details</h2>
    </div>
    <div class="flex gap-3">
      <%%= link_to "Edit", edit_<%= singular_table_name %>_path(@<%= singular_table_name %>),
      class: "px-4 py-2 text-sm font-medium border rounded-md hover:bg-gray-50" %>
      <%%= link_to "Back", <%= index_helper %>_path,
      class: "text-gray-600 hover:text-gray-800" %>
    </div>
  </div>
  <div class="bg-white border rounded-md">
    <div class="p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <% attributes.each do |attribute| %>
          <div>
            <div class="text-sm font-medium text-gray-500 mb-1"><%= attribute.human_name %></div>
            <div class="text-gray-900"><%%= @<%= singular_table_name %>.<%= attribute.column_name %> %></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
